{
  "name": "@cityofzion/neon-core",
  "description": "Neon-JS Core functionality",
  "version": "4.0.0-next.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfZion/neon-js.git"
  },
  "keywords": [
    "neo",
    "antshares",
    "javascript",
    "libraries"
  ],
  "author": "Yak Jun Xiang <snowypowers@gmail.com> (https://github.com/snowypowers)",
  "license": "MIT",
  "main": "lib/index.js",
  "browser": "lib/browser.js",
  "module": "src/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "tslint src/**/*.ts __tests__/**/*.ts __integration__/**/*.ts",
    "lint:fix": "tslint src/**/*.ts --fix",
    "prepublishOnly": "yarn lint && yarn build",
    "pretty": "prettier",
    "test": "jest --coverage",
    "test:unit": "jest ./__tests__/.*",
    "test:integration": "jest ./__integration__/.*",
    "dist": "cross-env NODE_ENV=development webpack --mode development",
    "dist:prod": "cross-env NODE_ENV=production webpack --mode production",
    "clean": "rimraf ./lib ./dist"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bignumber.js": "^7.2.1",
    "bs58": "^4.0.1",
    "bs58check": "^2.1.2",
    "crypto-js": "^3.1.9-1",
    "elliptic": "^6.4.0",
    "loglevel": "^1.6.1",
    "loglevel-plugin-prefix": "^0.8.4",
    "scrypt-js": "^2.0.3",
    "secure-random": "^1.1.1",
    "wif": "^2.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.55",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.55",
    "@babel/polyfill": "^7.0.0-beta.55",
    "@babel/preset-env": "^7.0.0-beta.55",
    "@babel/register": "^7.0.0-beta.55",
    "@types/bn.js": "^4.11.1",
    "@types/bs58": "^3.0.30",
    "@types/crypto-js": "^3.1.43",
    "@types/jest": "^23.3.1",
    "@types/loglevel": "^1.5.3",
    "@types/node": "^10.5.4",
    "cross-env": "^5.2.0",
    "jest": "^23.4.2",
    "prettier": "^1.14.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  },
  "files": [
    "lib/"
  ],
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "<rootDir>/tsconfig-test.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__(tests|integration)__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
